@import "../assets/tokens/tokens.styl"

@import "../styles/brands.styl"
@import "../styles/indications.styl"

.vocab.statistic
  // Color palette

  --statistic-primary $color-black

  &.inverted
    --statistic-primary $color-white

  brands('--statistic-primary')
  indications('--statistic-primary', 9)

  --statistic-secondary $color-light-slate-gray

  &.inverted
    --statistic-secondary $color-gray

  // Color

  --statistic-value-color var(--statistic-primary)
  --statistic-label-color var(--statistic-secondary)

  // Rules

  display inline-flex
  flex-direction column
  align-items center
  justify-content flex-end

  // Children

  & > .bit
    text-align center
    text-transform uppercase

    // States

    &.value
      color var(--statistic-value-color)

      font-size $size-gigantic

      &.textual
        font-size $size-huge

    &.label
      color var(--statistic-label-color)

      font-weight $weight-bold

  // States

  &.plural
    height 100%

