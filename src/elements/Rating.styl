@import "../assets/tokens/tokens.styl"

@import "../styles/brands.styl"
@import "../styles/indications.styl"
@import "../styles/media.styl"
@import "../styles/sizes.styl"

.vocab.rating
  // Color palette

  --rating-primary $color-black

  &.inverted
    --rating-primary $color-white

  brands('--rating-primary')
  indications('--rating-primary', 9)

  --rating-secondary $color-light-slate-gray

  &.inverted
    --rating-secondary $color-gray

  --rating-tertiary $color-gray

  &.inverted
    --rating-tertiary $color-light-slate-gray

  // Color

  --rating-active-icon-color var(--rating-primary)
  --rating-inactive-icon-color var(--rating-secondary)
  --rating-inactive-icon-hover-color var(--rating-tertiary)

  &.read-only,
  &.disabled
    --rating-inactive-icon-hover-color var(--rating-inactive-icon-color)

  // Cursor

  --rating-cursor pointer

  &.read-only
    --rating-cursor default

  &.disabled
    --rating-cursor not-allowed

  // Rules

  display inline-flex
  align-items center

  color var(--rating-active-icon-color)

  sizes('font-size')

  // Children

  & > .icon
    cursor var(--rating-cursor)

    &.dot
      font-size 0.5em

      margin-right $space-large

    &.unit
      margin-right $space-normal

      transition-property color, transform
      transition-duration $duration-shortest

      &:not(.active)
        color var(--rating-inactive-icon-color)
        transform scale(0.85)

        &:hover
          color var(--rating-inactive-icon-hover-color)
          transform scale(1)

  &.read-only,
  &.disabled
    & > .icon
      &.unit
        &:not(.active)
          transform none

  &.disabled
    opacity 0.2
