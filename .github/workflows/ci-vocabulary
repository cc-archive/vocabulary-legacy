name: CI for vocabulary package

on:
  push:
    paths:
      - "packages/vocabulary/**"
    branches:
      - master
  pull_request:
    paths:
      - "packages/vocabulary/**"
    branches:
      - master

env:
  CI: true
  PUPPETEER_SKIP_CHROMIUM_DOWNLOAD: true

jobs:
  setup:
    name: Setup
    defaults:
      run:
        working-directory: "packages/vocabulary"
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v1
        with:
          node-version: "12.16.1"

      - id: cache-node-modules
        name: Cache Node.js modules
        uses: actions/cache@v1
        with:
          path: ~/.npm # npm caches files in ~/.npm
          key: node-${{ hashFiles('**/package-lock.json') }}

      - name: Install dependencies
        if: steps.cache-node-modules.outputs.cache-hit != 'true'
        run: npm install --no-audit

  lint:
    name: Lint
    defaults:
      run:
        working-directory: "packages/vocabulary"
    runs-on: ubuntu-latest
    needs: setup

    steps:
      - uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v1
        with:
          node-version: "12.16.1"

      - id: cache-node-modules
        name: Cache Node.js modules
        uses: actions/cache@v1
        with:
          path: ~/.npm # npm caches files in ~/.npm
          key: node-${{ hashFiles('**/package-lock.json') }}

      - name: Install dependencies
        run: npm install --prefer-offline --no-audit

      - name: Run lint
        run: npm run lint

  unit:
    name: Unit tests
    defaults:
      run:
        working-directory: "packages/vocabulary"
    runs-on: ubuntu-latest
    needs: setup

    steps:
      - uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v1
        with:
          node-version: "12.16.1"

      - id: cache-node-modules
        name: Cache Node.js modules
        uses: actions/cache@v1
        with:
          path: ~/.npm # npm caches files in ~/.npm
          key: node-${{ hashFiles('**/package-lock.json') }}

      - name: Install dependencies
        run: npm install --prefer-offline --no-audit

      - name: Run tests
        run: npm run test:unit

  build:
    name: Build
    defaults:
      run:
        working-directory: "packages/vocabulary"
    runs-on: ubuntu-latest
    needs: setup

    steps:
      - uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v1
        with:
          node-version: "12.16.1"

      - id: cache-node-modules
        name: Cache Node.js modules
        uses: actions/cache@v1
        with:
          path: ~/.npm # npm caches files in ~/.npm
          key: node-${{ hashFiles('**/package-lock.json') }}

      - id: cache-build-artifacts
        name: Cache build artifacts
        uses: actions/cache@v1
        with:
          path: ./dist # build script puts compiled files in ./dist
          key: dist-${{ github.sha }}

      - name: Install dependencies
        run: npm install --prefer-offline --no-audit

      - name: Run build
        run: npm run build
